<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="top">
    <LinearLayout
        android:id="@+id/tv_search_address"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="6dp"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="30dp"
        android:background="@drawable/home_title_search_shape">
        <TextView
            android:layout_marginLeft="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_search_a"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="@color/title_search_shape_a"/>
    </LinearLayout>

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/img_title_message"
        android:id="@+id/img_title_call"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="25dp"
        android:src="@mipmap/icon_title_call"/>
</LinearLayout>
