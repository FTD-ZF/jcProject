<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/pay_titlebar"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_points_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/pay_success"/>
    </RelativeLayout>



    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:id="@+id/tv_points_b"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="积分获取"
                android:textColor="@color/title_orange"/>
            <ImageView
                android:id="@+id/img_points_b"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/title_orange"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/backgroundcolor"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/dark_3"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:id="@+id/tv_points_c"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="积分支出"/>
            <ImageView
                android:id="@+id/img_points_c"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/travel_title_bar"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/cursoraa"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagera"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />


</LinearLayout>



