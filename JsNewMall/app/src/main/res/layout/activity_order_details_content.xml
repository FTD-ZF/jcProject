<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_alignParentTop="true"
        android:id="@+id/ln_order_details_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <include layout="@layout/pay_titlebar"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollview_orderdetails"
        android:layout_below="@id/ln_order_details_a"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"

        android:background="@color/second_bgcolor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <!--订单号-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_order_details_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="14sp"
            android:textColor="@color/dark_6"/>
        <TextView
            android:id="@+id/tv_order_details_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_6"
            android:textSize="14sp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:orientation="vertical">
        <!--标题-->
        <TextView
            android:id="@+id/tv_order_details_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/dark_9"/>
        <!--订单总金额-->
        <TextView
            android:id="@+id/tv_order_details_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/dark_9"
            android:layout_marginTop="5dp"/>
        <!--已支付金额-->
        <TextView
            android:id="@+id/tv_order_details_e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/dark_9"
            android:layout_marginTop="5dp"/>
        <!--出发城市-->
        <TextView
            android:id="@+id/tv_order_details_f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/dark_9"
            android:layout_marginTop="5dp"/>
        <!--出发日期-->
        <TextView
            android:id="@+id/tv_order_details_g"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/dark_9"
            android:layout_marginTop="5dp"/>
        <!--返回日期-->
        <TextView
            android:id="@+id/tv_order_details_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/dark_9"
            android:layout_marginTop="5dp"/>
        <!--人数信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出游人数："
                android:textColor="@color/dark_9"
                android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_details_crqty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/dark_9"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_details_rtqty"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/dark_9"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_details_lrqty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/dark_9"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_details_xsqty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/dark_9"
                android:visibility="gone"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人信息"
                    android:layout_alignParentLeft="true"
                    android:textSize="14sp"
                    android:textColor="@color/dark_6"/>
            </RelativeLayout>

            <!--姓名手机邮箱-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginTop="1dp"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_order_details_i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/dark_9"/>
                <TextView
                    android:id="@+id/tv_order_details_j"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/dark_9"/>
                <TextView
                    android:id="@+id/tv_order_details_k"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/dark_9"/>

            </LinearLayout>




            <RelativeLayout
                android:id="@+id/rl_order_add_traveller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="旅客信息"
                    android:layout_alignParentLeft="true"
                    android:textSize="14sp"
                    android:textColor="@color/dark_6"/>
                <ImageView
                    android:id="@+id/img_select_traveller"
                    android:layout_alignParentRight="true"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_xiangyou"/>
            </RelativeLayout>
            <ListView
                android:id="@+id/list_order_traveller"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:divider="@null">

            </ListView>






        </LinearLayout>
    </ScrollView>

    <LinearLayout

        android:layout_alignParentBottom="true"
        android:id="@+id/ln_submit_details_pay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone">
        <TextView

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="在线付款"
            android:textSize="16sp"
            android:background="@color/title_orange"
            android:textColor="@color/white"/>

    </LinearLayout>


</RelativeLayout>
