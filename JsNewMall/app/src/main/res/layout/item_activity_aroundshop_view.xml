<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ln_item_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">



    <FrameLayout
        android:layout_width="110dp"
        android:layout_height="110dp">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/netimg_result"
            android:layout_width="110dp"
            android:layout_height="110dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ln_item_shop_bgcolor"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:alpha="0.8">
            <TextView
                android:id="@+id/tv_item_result_a"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp" />
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp">
        <!--标题-->
        <LinearLayout
            android:id="@+id/ln_result_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_result_content_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="@color/dark_3"
                android:textSize="12sp"/>
        </LinearLayout>


        <!--电话-->
        <LinearLayout
            android:id="@+id/ln_result_b"
            android:layout_below="@id/ln_result_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_result_content_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="@color/dark_6"
                android:textSize="12sp"/>

        </LinearLayout>



        <!--地址名称-->
        <LinearLayout

            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_result_content_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="@color/dark_6"
                android:textSize="12sp"/>

        </LinearLayout>


    </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/second_bgcolor"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/ln_item_call"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_shop_call"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:textColor="@color/dark_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拨号"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/second_bgcolor"/>

        <LinearLayout
            android:id="@+id/ln_item_location"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_shop_location"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textColor="@color/dark_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导航"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/second_bgcolor"/>

</LinearLayout>
